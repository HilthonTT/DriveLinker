<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:DriveLinker.ViewModels"
             xmlns:behaviors="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="viewModel:AuthViewModel"
             x:Class="DriveLinker.Views.AuthPage"
             Title="AuthPage">

    <Shell.TitleView>
        <Grid>
            <Label
                Text="Drive Linker" 
                Margin="10,0,0,0" 
                HorizontalOptions="Start" 
                VerticalOptions="Center"
                TextColor="White" 
                FontSize="Title"/>
        </Grid>
    </Shell.TitleView>

    <ContentPage.Behaviors>
        <behaviors:EventToCommandBehavior 
            EventName="Appearing" 
            Command="{Binding VerifyAccountExistanceCommand}"/>
    </ContentPage.Behaviors>

    <ScrollView>
        <VerticalStackLayout
            Spacing="30"
            Padding="0,20"
            HorizontalOptions="Center">
            <VerticalStackLayout>
                <Frame
                    Style="{StaticResource AppIconFrame}">
                    <Image 
                        Style="{StaticResource AppIcon}"/>
                </Frame>
                <Label
                    Text="Drive Linker"
                    HorizontalOptions="Center"
                    TextTransform="Uppercase"
                    FontSize="24"
                    Margin="0,10,0,0"/>
            </VerticalStackLayout>
            <VerticalStackLayout
                WidthRequest="500">
                <FlexLayout Direction="Column">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Entry 
                            Grid.Column="0"
                            Placeholder="Password"
                            HeightRequest="50"
                            Text="{Binding Password}"
                            IsPassword="{Binding DontShowPassword}"/>
                        <ImageButton 
                            Grid.Column="1"
                            Style="{StaticResource ShowButton}"
                            Command="{Binding ToggleShowPasswordCommand}"/>
                    </Grid>
                </FlexLayout>
                <Button 
                    Style="{StaticResource Button}"
                    Command="{Binding AuthenticateCommand}"
                    Text="Login"
                    Margin="0,20,0,0"/>
            </VerticalStackLayout>
            <VerticalStackLayout
                WidthRequest="500">
                <FlexLayout Direction="Column">
                    <Grid
                        ColumnDefinitions="*,*">
                        <Button 
                            Text="Don't have an account?" 
                            Style="{StaticResource AuthButton}"
                            Command="{Binding RegisterCommand}"
                            IsVisible="{Binding ShowRegisterButton}"
                            HorizontalOptions="Start" />
                        <Button 
                            Text="Forgot password" 
                            Style="{StaticResource AuthButton}"
                            Command="{Binding ForgotPasswordCommand}"
                            Grid.Column="1" 
                            HorizontalOptions="End" />
                    </Grid>
                </FlexLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>