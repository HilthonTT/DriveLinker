<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:DriveLinker.ViewModels"
             x:DataType="viewModels:DriveViewModel"
             x:Class="DriveLinker.Views.DrivePage"
             Title="Drive Page">
    <ScrollView>
        <VerticalStackLayout Spacing="5" Padding="0">
            <Grid ColumnDefinitions="*,Auto,*"
                  RowDefinitions="160,Auto">
                <BoxView Color="White"
                         Grid.ColumnSpan="3"
                         HeightRequest="160"
                         HorizontalOptions="FillAndExpand"/>
                <Frame Grid.RowSpan="2"
                       Grid.Column="1"
                       HeightRequest="160"
                       CornerRadius="80"
                       HorizontalOptions="Center"
                       Padding="0"
                       Margin="0,80,0,0"
                       BackgroundColor="#121212">
                    <FlexLayout HeightRequest="160"
                                WidthRequest="160">
                        <Label Text="{Binding Drive.Letter}"
                               FontSize="75"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               TextColor="White"
                               Margin="29, 0, 0, 0"/>
                    </FlexLayout>
                </Frame>
            </Grid>
            <VerticalStackLayout Padding="10"
                                 Spacing="10"
                                 Margin="20">
                <Frame Style="{StaticResource CardView}"
                       Padding="10">
                    <VerticalStackLayout Spacing="15" Padding="10">
                        <FlexLayout Direction="Row"
                                    JustifyContent="SpaceBetween">
                            <Label HorizontalOptions="Start">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding Drive.Letter}" 
                                              FontSize="25"/>
                                        <Span Text=": "
                                              FontSize="25"/>
                                        <Span Text="{Binding Drive.DriveName}"
                                              FontSize="25"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Button Text="X"
                                    Command="{Binding ClosePageCommand}"/>
                        </FlexLayout>
                        <FlexLayout>
                            <Label HorizontalOptions="Start">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Date Added: "
                                              FontSize="20"/>
                                        <Span Text="{Binding Drive.DateCreated, StringFormat='{0:dd/MMMM/yyyy}'}"
                                              FontSize="20"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </FlexLayout>
                        <FlexLayout Direction="Row" 
                                    JustifyContent="SpaceBetween">
                            <Button Text="Update Drive"
                                    Command="{Binding LoadUpdatePageCommand}"/>
                            <BoxView WidthRequest="1" Color="Transparent" />
                            <Button Text="Delete Drive" 
                                    Command="{Binding DeleteRequestCommand}" />
                        </FlexLayout>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>